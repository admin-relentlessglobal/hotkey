{
  "rules": {
    "github/unescaped-html-literal": "off",
    "github/no-inner-html": "off",
    "eslint-comments/no-use": "off",
    "import/extensions": ["error", "always"]
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "assert": true
  },
  "extends": "../.eslintrc.json",
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js"]
      }
    }
  }
}
